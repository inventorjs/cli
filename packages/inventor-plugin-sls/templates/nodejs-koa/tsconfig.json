{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
